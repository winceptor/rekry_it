<div class="container result shadow">
	<div class="col-sm-12 mark lead">
		<div class="row">
			<div class="col-sm-9"><%- highlight(entry.title) %> <% if (entry.company && entry.company!="") { %><a href="/search?q=company:(<%= encodeURIComponent(entry.company) %>)" class="href"><%- highlight(entry.company) %></a><% } %></div>
			<div class="col-sm-3 text-muted text-right"><%- highlight(DateToInput(entry.date)) %></div>
		</div>
	</div>
	<div class="col-sm-6">
		<label>###jobfield###: </label>
		<div class="lead"><a href="/search?f=<%= encodeURIComponent(entry.field) %>" class="href"><%- highlight(entry.field) %></a></div>
	</div>
	<div class="col-sm-6">
		<label>###jobtype###: </label>
		<div class="lead"><a href="/search?t=<%= encodeURIComponent(entry.type) %>" class="href"><%- highlight(entry.type) %></a></div>
	</div>
	<div class="col-sm-6">
		<label>###jobskills###: </label>
		<div class="text-muted lead"><%- highlight(entry.skills) %></div>
	</div>
	<div class="col-sm-6">
		<label>###beginning###: </label>
		<div class="text-muted lead"><%- highlight(entry.beginning) %></div>
	</div>
	<div class="col-sm-6">
		<label>###duration###: </label>
		<div class="text-muted lead"><%- highlight(entry.duration) %></div>
	</div>
	<div class="col-sm-12 text-right"><a role="button" href="/job/<%= entry._id %>" class="btn btn-primary btn-sm">###details###</a></div>
</div>