<% if (typeof entry != "undefined" && entry) { %>
	<div class="container">
		 <div class="row">
		   <div class="col-sm-12">
			<div class="col-sm-12">
				<h2><%= entry.name %></h2>
			</div>
		   </div>
		 </div>  
				
		<% if ( entry.admin) { %>
			<hr class="simple-divider">
			<div class="row">	
				<div class="col-sm-12"><label for="isadmin" class="col-sm-3 control-label" style="color: red;"><strong>###admin###</strong></div>
			</div>
		<% } %>
		
		<% if ( entry.employer) { %>
			<hr class="simple-divider">
			<div class="row">	
				<div class="col-sm-12"><label for="isemployer" class="col-sm-3 control-label" style="color: red;"><strong>###employer###</strong></div>
			</div>
		<% } %>
		
		<hr class="simple-divider">
		 
		<div class="row">
		   <div class="col-sm-12 text-spacing">
				<label class="col-sm-3">
					<strong>###email###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><% if ( user && (user.admin || user.employer)) { %><%= entry.email %> <% } else { %><b>###hidden###<% } %></b></div>
		   </div>
		   <div class="col-sm-12 text-spacing">
				<label class="col-sm-3">
					<strong>###phone###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><% if ( user && (user.admin || user.employer)) { %><%= entry.phone %> <% } else { %><b>###hidden###<% } %></b></div>
		   </div>
		   <div class="col-sm-12 text-spacing">
				<label class="col-sm-3">
					<strong>###birthdate###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><% if ( user && (user.admin || user.employer)) { %><%= DateToInput(entry.dateOfBirth) %> <% } else { %><b>###hidden###<% } %></b></div>
		   </div>	   
		   <div class="col-sm-12 text-spacing">
				<label class="col-sm-3">
					<strong>###country###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><% if ( user && (user.admin || user.employer)) { %><%= entry.country %> <% } else { %><b>###hidden###<% } %></b></div>
		   </div>
		   <div class="col-sm-12 text-spacing">
				<label class="col-sm-3">
					<strong>###gender###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><% if ( user && (user.admin || user.employer)) { %><%= trans(entry.gender) %> <% } else { %><b>###hidden###<% } %></b></div>
		   </div>
		</div>  
		
		<hr class="simple-divider">
		 
		<div class="row">
			<div class="col-sm-12 text-spacing">
			   <label class="col-sm-3">
					<strong>###studyfield###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><% if ( entry.fieldOfStudy) { %><%= entry.fieldOfStudy.name %><% } %></div>
			</div>
			<div class="col-sm-12 text-spacing">
				<label class="col-sm-3">
					<strong>###studyyear###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><%= entry.yearOfStudies %><% if ( entry.typeOfStudies) { %> / <%= entry.typeOfStudies.name %><% } %></div>
			</div>
		</div>	
			
		<hr class="simple-divider">
		
		<div class="row">	
		   <div class="col-sm-12 text-spacing">
				<label class="col-sm-3">
					<strong>###jobtypes###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><%= entry.typeOfJob %></div>
		   </div>
		   <div class="col-sm-12 text-spacing">
				<label class="col-sm-3">
					<strong>###skills###:</strong>
				</label>
				<div class="col-sm-9 text-muted">
					<span class="tags"><%= entry.skills%></span>
				</div>
		   </div>

		   <div class="col-sm-12 text-spacing">
				<label class="col-sm-3">
					<strong>###keywords###:</strong>
				</label>
				<div class="col-sm-9 text-muted">
					<span class="tags"><%= entry.keywords%></span>
				</div>
		   </div>
		</div>
	</div>
<% } %>