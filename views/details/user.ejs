<% if (typeof profile != "undefined" && profile) { %>
		 <div class="row">
		   <div class="col-sm-12 vertical-spacing">
			<div class="col-xs-12 vertical-spacing">
				<h3 class="inline"><a href="/profile/<%= profile._id %>" class="href"><%= profile.name %></a>
					<% if ( profile.verified) { %>
						<span class="text-muted small" style="color: green;"> ###verified###</span>
					<% } else { %>
						<span class="text-muted small" style="color: red;"> ###unverifiedtext###</span>
					<% } %>
				</h3>
				<span class="entryinfo text-muted pull-right text-right vertical-spacing" title="DD.MM.YYYY">###lastlogin###: <%- highlight(DateToInput(profile.lastlogin)) %></span>
			</div>
		   </div>
		 </div>  
				
		<% if ( profile.admin) { %>
			<hr class="simple-divider">
			<div class="row">	
				<div class="col-sm-12 vertical-spacing"><label for="isadmin" class="col-sm-3 control-label" style="color: green;"><strong>###admin###</strong></div>
			</div>
		<% } %>
		<% if ( profile.manager) { %>
			<hr class="simple-divider">
			<div class="row">	
				<div class="col-sm-12 vertical-spacing"><label for="isemployer" class="col-sm-3 control-label" style="color: green;"><strong>###manager###</strong></div>
			</div>
		<% } %>
		
		<% if ( profile.employer) { %>
			<hr class="simple-divider">
			<div class="row">	
				<div class="col-sm-12 vertical-spacing"><label for="isemployer" class="col-sm-3 control-label" style="color: green;"><strong>###employer###</strong></div>
			</div>
		<% } %>
		
				
		<% var showsensitive = user && (user._id==profile._id || user.admin || user.employer); %>
		
		<hr class="simple-divider">
		<div class="row">
			<div class="col-sm-12 vertical-spacing">
				<label class="col-sm-12 text-muted">
					<strong>###basicinfo###</strong>
				</label>
		   </div>	
		   <% if ( profile.email && profile.email!="" ) { %>
		   <div class="col-sm-12 vertical-spacing">
				<label class="col-sm-3">
					<strong>###email###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><% if ( showsensitive) { %><a href="mailto://<%= profile.email %>" target="_blank" class="href"><%- highlight(profile.email) %></a> <% } else { %><b>###hidden###</b><% } %></div>
		   </div>
		   <% } %>
		   <% if ( profile.phone && profile.phone!="" ) { %>
		   <div class="col-sm-12 vertical-spacing">
				<label class="col-sm-3">
					<strong>###phone###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><% if ( showsensitive) { %><%= profile.phone || "" %> <% } else { %><b>###hidden###</b><% } %></div>
		   </div>
		   <% } %>
		   <% if ( profile.country && profile.country!="" ) { %>
		   <div class="col-sm-12 vertical-spacing">
				<label class="col-sm-3">
					<strong>###country###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><% if ( showsensitive) { %><%= profile.country || "" %> <% } else { %><b>###hidden###</b><% } %></div>
		   </div>
		   <% } %>
		   <% if ( profile.address && profile.address!="" ) { %>
		   <div class="col-sm-12 vertical-spacing">
				<label class="col-sm-3">
					<strong>###address###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><% if ( showsensitive) { %><%= profile.address || "" %> <% } else { %><b>###hidden###</b><% } %></div>
		   </div>
		   <% } %>
		   <% if ( profile.dateOfBirth && profile.dateOfBirth!="" ) { %>
			<div class="col-sm-12 vertical-spacing">
				<label class="col-sm-3">
					<strong>###birthdate###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><% if ( showsensitive) { %><%= DateToInput(profile.dateOfBirth) %><% } else { %><b>###hidden###</b><% } %></div>
		   </div>	
		   <% } %>
		   <% if ( profile.gender && profile.gender!="" ) { %>   
		   <div class="col-sm-12 vertical-spacing">
				<label class="col-sm-3">
					<strong>###gender###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><% if ( showsensitive) { %><%= trans(profile.gender) %><% } else { %><b>###hidden###</b><% } %></div>
		   </div>
		   <% } %>
		   <% if ( profile.yearOfStudies && profile.yearOfStudies!="" ) { %>
		   <div class="col-sm-12 vertical-spacing">
				<label class="col-sm-3">
					<strong>###studyyear###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><% if ( showsensitive) { %><%= profile.yearOfStudies || "" %><% if ( profile.typeOfStudies && profile.typeOfStudies!="") { %> / <%= CatsToNames(profile.typeOfStudies) %><% } %><% } else { %><b>###hidden###</b><% } %></div>
			</div>
			<% } %>
		</div>
		
		<hr class="simple-divider">
		
		<div class="row">
			<div class="col-sm-12 vertical-spacing">
				<label class="col-sm-12 text-muted">
					<strong>###recruitmentinfo###</strong>
				</label>
		   </div>
		   	<div class="col-sm-12 vertical-spacing">
			   <label class="col-sm-3">
					<strong>###studyfield###:</strong>
				</label>
				<% var fieldofstudyoutput = []; %>
				<div class="col-sm-9 text-muted"><% if ( showsensitive) { %><% if ( profile.fieldOfStudy && profile.fieldOfStudy!="") { %><%= CatsToNames(profile.fieldOfStudy).join(", ") %><% } %><% } else { %><b>###hidden###</b><% } %></div>
			</div>
		   <div class="col-sm-12 vertical-spacing">
				<label class="col-sm-3">
					<strong>###jobtypes###:</strong>
				</label>
				<div class="col-sm-9 text-muted"><% if ( showsensitive) { %><% if ( profile.typeOfJob && profile.typeOfJob!="") { %><%= CatsToNames(profile.typeOfJob).join(", ") %><% } %><% } else { %><b>###hidden###</b><% } %></div>
		   </div>
		   	<div class="col-sm-12 vertical-spacing">
				<label class="col-sm-3">
					<strong>###keywords###:</strong>
				</label>
				<div class="col-sm-9 text-muted">
					<span class="tags"><% if ( showsensitive) { %><%= profile.keywords || "" %><% } else { %><b>###hidden###</b><% } %></span>
				</div>
		   </div>
		   <% if (1==0) { %>
		   <div class="col-sm-12 vertical-spacing">
				<label class="col-sm-3">
					<strong>###skills###:</strong>
				</label>
				<div class="col-sm-9 text-muted">
					<span class="tags"><% if ( showsensitive) { %><%= profile.skills || "" %><% } else { %><b>###hidden###</b><% } %></span>
				</div>
		   </div>
			<% } %>
		</div>	
		
		<hr class="simple-divider">
		
		<div class="row">	
			<div class="col-sm-12 vertical-spacing">
				<label class="col-sm-3 text-muted">
					<strong>###cv###</strong>
				</label>
				<div class="col-sm-9 text-muted">
					<% if ( showsensitive) { %><a href="/file/<%= profile.cv %>?uid=<%= profile._id %>"><%= profile.cv %></a><% } else { %><b>###hidden###</b><% } %>
					
				</div>
		   </div>
		</div>
<% } %>