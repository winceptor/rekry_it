<% if (typeof document != "undefined" && document) { %>

	<div class="row">
		<div class="col-sm-12 text-spacing">
			<div class="lead parsed text-justify">
				<% if ( document.content && document.content!="") { %><%- catparse(document.content) %><% } else { %>###undefined###<% } %>
			</div>
		</div>		   
	</div>	
	
		
	<div class="row">
		<div class="col-sm-12">
			<% if (user) { %>
				<% if (user.admin) { %>
					<div class="pull-right">
						<button onclick="window.open('/admin/edit-document/<%= document._id %>');" class="btn btn-admin">###edit###</button>
						<button onclick="window.open('/admin/delete-document/<%= document._id %>');" class="btn btn-admin">###delete###</button>
					</div>
				<% } %>
			<% } %>
		</div>
	</div> 	
<% } %>