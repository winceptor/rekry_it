<% layout('layout') -%>
<div class="container">
	<h1 class="title">###users###</h1>

	<div class="container row">
		<div class="col-xs-12">
			<a href="/admin/add-user" class="col-xs-12 btn btn-warning">###adduser###</a>
		</div>
	</div>
	<hr class="empty-divider">
	
	<% include ../partials/searchbar-advanced %>
	
	<div class="container row" id="search">
		<div id="searchresults" class="col-md-12">
			<% for(var i=0; i<data.length;i++){ var entry = data[i]; %>
				<hr class="empty-divider">
				<%  if (entry) { %>
					<div class="list-entry<% if ( entry.admin ) { %> important-entry<% } %>">
						<div class="list-entry-head btn-primary" onclick="$( this ).parent().toggleClass( 'expand' );">
							<p><span><%= entry.name %> <strong><%= entry.email %></strong></span><span class="pull-right"><strong>###date###: </strong><%= DateToInput(entry.date) %></span></p>
						</div>
						<div class="list-entry-data">
							<p><strong>###id###: </strong><%= entry._id %></p>
							<p><strong>###name###: </strong><%= entry.name %></p>
							<p><strong>###email###: </strong><%= entry.email %></p>
							<p><strong>###phone###: </strong><%= entry.phone %></p>
							<p><strong>###birthdate###: </strong><%= DateToInput(entry.dateOfBirth) %></p>
							<p><strong>###country###: </strong><%= entry.country %></p>
							<p><strong>###gender###: </strong><%= entry.gender %></p>
							<p><strong>###studyfield###: </strong><%= entry.fieldOfStudy %></p>
							<p><strong>###studyyear###: </strong><%= entry.yearOfStudies %></p>
							<p><strong>###jobtypes###: </strong><%= entry.typeOfJob %></p>
							<p><strong>###skills###: </strong><%= entry.skills %></p>
							<p><strong>###keywords###: </strong><%= entry.keywords %></p>
							<p><strong>###date###: </strong><%= DateToInput(entry.date) %></p>
							<p><strong>###lastlogin###: </strong><%= DateToInput(entry.lastlogin) %></p>
							<p><strong>###lastip###: </strong><%= entry.lastip %></p>
							<p><strong>###admin###: </strong><%= entry.admin %></p>
						</div>
						<div class="list-entry-buttons">
							<a role="button" href="/profile/<%= entry._id %>" class="btn btn-primary btn-sm" target="_blank">###details###</a>
							<a role="button" href="/admin/delete-user/<%= entry._id %>" class="btn btn-sm btn-warning">###delete###</a>
							<a role="button" href="/admin/edit-user/<%= entry._id %>" class="btn btn-sm btn-warning">###edit###</a>
						</div>
					</div>
				<% } else { %>
					<div class="list-entry">
						<div class="list-entry-head btn-primary" onclick="$( this ).parent().toggleClass( 'expand' );">
							<p><span><strong><%= entry %>:</strong></span><span class="pull-right"><strong>ID: </strong><%= i %></span></p>
						</div>
						<div class="list-entry-data">
							
						</div>
					</div>
				<% } %>
			<% } %>
		</div>
	</div>
		
	<% include ../partials/paginator %>
</div>