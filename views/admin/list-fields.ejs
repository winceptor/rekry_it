<% layout('layout') -%>
<div class="container">
	<hr class="simple-divider">
	
	<div class="row">
		<div class="col-sm-12">
			<a href="/admin/add-field" class="col-sm-12 btn btn-warning"><%= trans("Add new field") %></a>
		</div>
	</div>
	
	<hr class="simple-divider">
	
	<% var searchlistlimit = listlimit; %>
	<% include ../partials/searchbar %>
	
	<hr class="simple-divider">
	
	<% include ../partials/paginator %>
	
	<div class="container" id="search">
		<div class="col-md-10 col-md-push-1">
			<div id="searchresults">
				<% for(var i=0; i<data.length;i++){ var entry = data[i]; %>
					<div class="list-entry">
						<div class="list-entry-head btn-primary" onclick="$( this ).parent().toggleClass( 'expand' );">
							<p><span><strong><%= entry.field %></strong></span><span class="pull-right"><strong>ID: </strong><%= entry._id %></span></p>
						</div>
						<div class="list-entry-data">
							<% for(var key in entry){ var value = entry[key]; %>
								<p><strong><%= key %></strong>: <%= value %></p>
							<% } %>
						</div>
						<div class="list-entry-buttons">
							<a role="button" href="/field/<%= entry._id %>" class="btn btn-primary btn-sm"><%= trans("Details") %></a>
							<a role="button" href="/admin/delete-field/<%= entry._id %>" class="btn btn-sm btn-warning"><%= trans("Delete") %></a>
							<a role="button" href="/admin/edit-field/<%= entry._id %>" class="btn btn-sm btn-warning"><%= trans("Edit") %></a>
						</div>
					</div>
				<% } %>
			</div>
		</div>
	</div>
		
	<% include ../partials/paginator %>
</div>				