<% layout ('layout') -%>
<div class="container shadow">
	<div class="col-sm-12">
		<div class="container">
			<form class="form-horizontal" method="post">
				
				<hr class="empty-divider">
				
				<h3><%= document.name %><span class="pull-right">ID: <%= user._id %></span></h3>
			
				<hr class="simple-divider">
				
				<% var operation = "edit"; %>	
				
				<% include ../forms/document %>
				
				<hr class="empty-divider">

				<div class="form-group">
					<div class="col-sm-12">
						<div class="pull-right">
							<button type="submit" class="btn btn-admin">###save###</button>
							<button type="button" onclick="window.close();" class="btn">###close###</button>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>