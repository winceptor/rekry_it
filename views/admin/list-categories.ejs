<% layout('layout') -%>
<div class="container">
	<hr class="simple-divider">
	
	<div class="row">
		<div class="col-sm-12">
			<a href="/admin/add-category" class="col-sm-12 btn btn-warning"><%= trans("Add new category") %></a>
		</div>
	</div>
	
	<hr class="simple-divider">

	<% include ../partials/searchbar %>
	
	<hr class="simple-divider">
	
	<div class="container" id="search">
		<div class="col-md-10 col-md-push-1">
			<div id="searchresults">
				<% for(var i=0; i<data.length;i++){ var entry = data[i]; if (entry) %>
					<%  if (entry) { %>
						<div class="list-entry">
							<div class="list-entry-head btn-primary" onclick="$( this ).parent().toggleClass( 'expand' );">
								<p><span><strong><%= entry.name %></strong> </span><span class="pull-right"><strong><%= trans("Category") %>: </strong><%= entry.category %></span></p>
							</div>
							<div class="list-entry-data">
								<p><strong><%= trans("ID") %>: </strong><%= entry._id %></p>
								<p><strong><%= trans("Name") %>: </strong><%= entry.name %></p>
								<p><strong><%= trans("Category") %>: </strong><%= entry.category %></p>
							</div>
							<div class="list-entry-buttons">
								<a role="button" href="/category?nam=<%= entry.name %>&cat=<%= entry.category %>" class="btn btn-primary btn-sm"><%= trans("Details") %></a>
								<a role="button" href="/admin/delete-category/<%= entry._id %>" class="btn btn-sm btn-warning"><%= trans("Delete") %></a>
								<a role="button" href="/admin/edit-category/<%= entry._id %>" class="btn btn-sm btn-warning"><%= trans("Edit") %></a>
							</div>
						</div>
					<% } else { %>
						<div class="list-entry">
							<div class="list-entry-head btn-primary" onclick="$( this ).parent().toggleClass( 'expand' );">
								<p><span><strong><%= entry %>:</strong></span><span class="pull-right"><strong>ID: </strong><%= i %></span></p>
							</div>
							<div class="list-entry-data">
								
							</div>
						</div>
					<% } %>
				<% } %>
			</div>
		</div>
	</div>
		
	<% include ../partials/paginator %>
</div>				