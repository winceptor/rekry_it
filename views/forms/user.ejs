<!-- form-user -->
<div class="form-group">
	<label for="name" class="col-sm-3 control-label"><%= trans("Full name") %></label>
	<div class="col-sm-8">
		<input type="text" name="name" value="<% if (profile) { %><%= profile.name %><% } %>" placeholder="<%= trans("Last Name + First Name") %>" class="form-control textarea" autofocus>
	</div>
</div>
<div class="form-group">
	<label for="email" class="col-sm-3 control-label"><%= trans("Email") %></label>
	<div class="col-sm-8">
		<input type="email" name="email" value="<% if (profile) { %><%= profile.email %><% } %>" placeholder="<%= trans("Email") %>" class="form-control textarea" autofocus>
	</div>
</div>
<div class="form-group">
	<label for="password" class="col-sm-3 control-label"><%= trans("New password") %></label>
	<div class="col-sm-8">
		<input type="password" name="password" placeholder="<%= trans("New password") %>" class="form-control textarea" autofocus>
	</div>
</div>
<div class="form-group">
	<label for="passwordcheck" class="col-sm-3 control-label"><%= trans("Confirm password") %></label>
	<div class="col-sm-8">
		<input type="password" name="passwordcheck" placeholder="<%= trans("Confirm password") %>" class="form-control textarea" autofocus>
	</div>
</div>	

<hr class="simple-divider">

<div class="form-group">
	<label for="dateOfBirth" class="col-sm-3 control-label"><%= trans("Date of Birth") %></label>
	<div class="col-sm-8">
		<input type="date" name="dateOfBirth" value="<% if (profile) { %><%= profile.dateOfBirth %><% } %>" class="form-control textarea" autofocus>
		<span class="help-block"><%= trans("Format") %>: mm-dd-yyyy</span>
	</div>
</div>
<div class="form-group">
	<label for="country" class="col-sm-3 control-label"><%= trans("Country") %></label>
	<div class="col-sm-8">
		<select name="country" value="<% if (profile) { %><%= profile.country %><% } %>" class="selectpicker textarea" data-live-search="true" autofocus>
			<option value="" disabled><%= trans("Choose") %></option>
			<% for(var i=0; i<countries.length;i++){ %>
				<option <% if (profile && countries[i].toString()==profile.country) { %>selected="selected"<% } %>><%=countries[i] %></option>
			<% } %>
		</select>
	</div>
</div> <!-- /.form-group -->
<div class="form-group">
	<label class="control-label col-sm-3"><%= trans("Gender") %></label>
	<div class="col-sm-6">
		<div class="row">
			<div class="col-sm-4">
				<label class="radio-inline"><input type="radio" name="gender" id="female-radio" value="Female"<% if (profile && profile.gender=="Female") { %>checked="true"<% } %>><%= trans("Female") %></label>
			</div>
			<div class="col-sm-4">
				<label class="radio-inline"><input type="radio" name="gender" id="male-radio" value="Male"<% if (profile && profile.gender=="Male") { %>checked="true"<% } %>><%= trans("Male") %></label>
			</div>
		</div>
	</div>
</div> <!-- /.form-group -->

<hr class="simple-divider">

<div class="form-group">
	<label for="field" class="col-sm-3 control-label"><%= trans("Field of study") %></label>
	<div class="col-sm-6">
		<select name="fieldOfStudy" autofocus class="selectpicker form-control" data-live-search="true">
			<option value=""></option>
			<% for(var k in jobfields){ %>
				<option <% if (profile && profile.fieldOfStudy && profile.fieldOfStudy.indexOf(jobfields[k])>-1) { %>selected="selected"<% } %>><%=jobfields[k] %></option>
			<% } %>
		</select>
		<span class="help-block"><% if (profile) { %><%= profile.fieldOfStudy %><% } %></span>
	</div>
</div>
<div class="form-group">
	<label for="yearOfStudies" class="col-sm-3 control-label"><%= trans("Year of studies") %></label>
	<div class="col-sm-2">
		<input type="number" min="0" max="10" name="yearOfStudies" class="form-control textarea" value="<% if (profile) { %><%= profile.yearOfStudies %><% } %>" autofocus>
	</div>
	<label for="typeOfStudies" class="col-sm-1 control-label"><%= trans("of") %></label>
	<div class="col-sm-3">
		<select name="typeOfStudies" class="selectpicker textarea" autofocus>
			<option value=""></option>
			<% for(var i=0; i<studytypes.length;i++){ %>
				<option <% if (profile && studytypes[i].toString()==profile.typeOfStudies) { %>selected="selected"<% } %>><%=studytypes[i] %></option>
			<% } %>
		</select>
	</div>
</div>

<hr class="simple-divider">

<div class="form-group">
	<label class="control-label col-sm-3"><%= trans("Looking for job types") %></label>
	<div class="col-sm-6">
		<select name="typeOfJob" autofocus multiple class="selectpicker form-control" data-live-search="true">
			<% for(var i=0; i<jobtypes.length;i++){ %>
				<option <% if (profile && profile.typeOfJob && profile.typeOfJob.indexOf(jobtypes[i])>-1) { %>selected="selected"<% } %>><%=jobtypes[i] %></option>
			<% } %>
		</select>
	</div>

</div>
<div class="form-group">
	<label for="skills" class="col-sm-3 control-label"><%= trans("Skills") %></label>
	<div class="col-sm-8">
		<input type="text" name="skills" value="<% if (profile) { %><%= profile.skills %><% } %>" placeholder="" class="form-control textarea" autofocus>
	</div>
</div>
<div class="form-group">
	<label for="keywords" class="col-sm-3 control-label"><%= trans("Keywords I want to follow") %></label>
	<div class="col-sm-8">
		<input type="text" name="keywords" value="<% if (profile) { %><%= profile.keywords %><% } %>" placeholder="" class="form-control textarea" autofocus>
	</div>
</div>