<!-- form-category -->
<% if (typeof category == "undefined") { category = false; } %>

<div class="form-group">
	<label class="col-sm-2 control-label">###category###: </label>
	<div class="col-sm-8">
		<select name="category" class="selectpicker textarea form-control" title="###select###">
			<% for(k in catnames){ %>
				<option value="<%=k %>"<% if (category && k==category.category) { %> selected="selected"<% } %>><%=catnames[k] %></option>
			<% } %>
		</select>
		<% if (category && category.category && operation=="edit") { %><span class="helper-block"> ###donotchange###</span><% } %>
	</div>
</div>

<div class="form-group">
	<label class="col-sm-2 control-label">###name###: </label>
	<div class="col-sm-8">
		<% var translationtemplate = {}; for (k in languages) {translationtemplate[k]="";}; var placeholder = JSON.stringify(translationtemplate, undefined, '\t');  %>
		<textarea rows="5" id="name" name="name" placeholder="<%= placeholder %>" class="form-control" autofocus><% if (category && category.name && category.name!="") { %><%= category.name %><% } else { %><%= placeholder %><% } %></textarea>
	</div>
</div>
