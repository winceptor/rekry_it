<!-- form-job -->
<div class="form-group">
	<label for="featured" class="col-sm-3 control-label"><%= trans("Featured job") %> </label>
	<div class="col-sm-9">
		<input type="checkbox" name="featured" <% if (job && job.featured) { %>checked<% } %>>
	</div>
</div> 
<div class="form-group">
	<label for="hidden" class="col-sm-3 control-label"><%= trans("Hide") %> </label>
	<div class="col-sm-9">
		<input type="checkbox" name="hidden" <% if (job && job.hidden) { %>checked<% } %>>
	</div>
</div> 

<hr class="simple-divider">

<div class="form-group">
	<label for="title" class="col-sm-3 control-label"><%= trans("I want to hire someone for") %>:</label>
	<div class="col-sm-9">
		<input type="text" name="title" placeholder="" class="form-control" value="<% if (job) { %><%= job.title %><% } %>" autofocus>
	</div>
</div>
<div class="form-group">
	<label for="field" class="col-sm-3 control-label"><%= trans("Field of work") %>:</label>
	<div class="col-sm-6">
		<select name="field" id="field" class="form-control" data-live-search="true" autofocus>
			<option value=""></option>
			<% for(var i=0; i<jobfields.length;i++){ %>
				<option <% if (job && jobfields[i].toString()==job.field) { %>selected="selected"<% } %>><%=jobfields[i] %></option>
			<% } %>
		</select>
	</div>
</div>
<div class="form-group">
	<label for="type" class="col-sm-3 control-label"><%= trans("Type of job") %>:</label>
	<div class="col-sm-6">
		<select id="type" name="type" class="form-control" value="<% if (job) { %><%= job.type %><% } %>" autofocus>
			<option value=""></option>
			<% for(var i=0; i<jobtypes.length;i++){ %>
				<option <% if (job && jobtypes[i].toString()==job.type) { %>selected="selected"<% } %>><%=jobtypes[i] %></option>
			<% } %>
		</select>
	</div>
</div>

<hr class="simple-divider">

<div class="form-group">
	<label for="company" class="col-sm-3 control-label"><%= trans("Company name") %>:</label>
	<div class="col-sm-9">
		<input type="text" name="company" placeholder="" class="form-control" value="<% if (job) { %><%= job.company %><% } %>" autofocus>
	</div>
</div>
<div class="form-group">
	<label for="address" class="col-sm-3 control-label"><%= trans("Address") %>:</label>
	<div class="col-sm-9">
		<input type="text" name="address" placeholder="" class="form-control" value="<% if (job) { %><%= job.address %><% } %>" autofocus>
	</div>
</div>
<div class="form-group">
	<label for="email" class="col-sm-3 control-label"><%= trans("Email") %>:</label>
	<div class="col-sm-9">
		<input type="text" name="email" placeholder="name@email.com" class="form-control" value="<% if (job && job.email && job.email!="") { %><%= job.email %><% } else { %><%= user.email %><% } %>" autofocus>
	</div>
</div>

<hr class="simple-divider">

<div class="form-group">
	<% if (0==1) { %>
		<label for="startDate" class="col-sm-3 control-label"><%= trans("From") %>:</label>
		<div class="col-sm-3">
			<input type="text" name="startDate" placeholder="DD.MM.YYYY" class="form-control" value="<% if (job) { %><%= DateToInput(job.startDate) %><% } %>" autofocus>
		</div>
		
		
		<label for="endDate" class="col-sm-1 control-label"><%= trans("To") %>:</label>
		<div class="col-sm-3">
			<input type="text" name="endDate" placeholder="DD.MM.YYYY" class="form-control" value="<% if (job) { %><%= DateToInput(job.endDate) %><% } %>" autofocus>
		</div>
	<% } %>
</div>
<div class="form-group">
	<label for="beginning" class="col-sm-3 control-label"><%= trans("Job begins") %>:</label>
	<div class="col-sm-9">
		<input type="text" name="beginning" placeholder="" class="form-control" value="<% if (job) { %><%= job.beginning %><% } %>" autofocus>
	</div>
</div>
<div class="form-group">
	<label for="duration" class="col-sm-3 control-label"><%= trans("Job duration") %>:</label>
	<div class="col-sm-9">
		<input type="text" name="duration" placeholder="" class="form-control" value="<% if (job) { %><%= job.duration %><% } %>" autofocus>
	</div>
</div>
<div class="form-group">
	<label for="displayDate" class="col-sm-3 control-label"><%= trans("Display until") %>:</label>
	<div class="col-sm-3">
		<input type="text" name="displayDate" placeholder="DD.MM.YYYY" class="form-control" value="<% if (job) { %><%= DateToInput(job.displayDate) %><% } %>" autofocus>
		<span class="help-block"><%= trans("Format") %>: DD.MM.YYYY</span>
	</div>
</div>

<hr class="simple-divider">

<div class="form-group">
	<label for="skills" class="col-sm-3 control-label"><%= trans("Desired skills") %>:</label>
	<div class="col-sm-9">
		<input type="text" name="skills" class="form-control" value="<% if (job) { %><%= job.skills %><% } %>" autofocus>
	</div>
</div>
<div class="form-group">
	<label for="description" class="col-sm-3 control-label"><%= trans("Description") %>:</label>
	<div class="col-sm-9">
		<textarea rows="10" name="description" placeholder="" class="form-control" autofocus><% if (job) { %><%= job.description %><% } %></textarea>
	</div>
</div>