<!-- form-job -->
<div class="form-group">
	<label for="featured" class="col-sm-3 control-label">###featured### </label>
	<div class="col-md-6">
		<input type="checkbox" id="featured" name="featured" <% if (job && job.featured) { %>checked<% } %>>
	</div>
</div> 
<div class="form-group">
	<label for="hidden" class="col-sm-3 control-label">###hidden### </label>
	<div class="col-md-6">
		<input type="checkbox" id="hidden" name="hidden" <% if (job && job.hidden) { %>checked<% } %>>
	</div>
</div> 

<hr class="simple-divider">

<div class="form-group">
	<label for="title" class="col-sm-3 control-label">###title###:</label>
	<div class="col-md-6">
		<input type="text" id="title" name="title" placeholder="" class="form-control" value="<% if (job) { %><%= job.title %><% } %>" autofocus>
		<span class="help-block">###required###</span>
	</div>
</div>
<div class="form-group">
	<label for="field" class="col-sm-3 control-label">###jobfield###:</label>
	<div class="col-sm-6">
		<select name="field" id="field" class="form-control" data-live-search="true">
			<option label=" "></option>
			<% for(var i=0; i<jobfields.length;i++){ %>
				<option <% if (job && job.field && jobfields[i]._id==job.field.toString()) { %>selected="selected"<% } %> value="<%= jobfields[i]._id %>"><%= jobfields[i].name %></option>
			<% } %>
		</select>
		<span class="help-block">###required###</span>
	</div>
</div>
<div class="form-group">
	<label for="type" class="col-sm-3 control-label">###jobtype###:</label>
	<div class="col-sm-6">
		<select id="type" name="type" class="form-control" data-live-search="true">
			<option label=" "></option>
			<% for(var i=0; i<jobtypes.length;i++){ %>
				<option <% if (job && job.field && jobtypes[i]._id==job.type.toString()) { %>selected="selected"<% } %> value="<%= jobtypes[i]._id %>"><%= jobtypes[i].name %></option>
			<% } %>
		</select>
		<span class="help-block">###required###</span>
	</div>
</div>
<div class="form-group">
	<label for="email" class="col-sm-3 control-label">###email###:</label>
	<div class="col-md-6">
		<input type="text" id="email" name="email" placeholder="name@email.com" class="form-control" value="<% if (job && job.email && job.email!="") { %><%= job.email %><% } else { %><%= user.email %><% } %>">
		<span class="help-block">###required###</span>
	</div>
</div>
<div class="form-group">
	<label for="displayDate" class="col-sm-3 control-label">###displaydate###:</label>
	<div class="col-sm-6">
		<input type="text" id="displayDate" name="displayDate" placeholder="###displaydatetext###" class="form-control" value="<% if (job) { %><%= DateToInput(job.displayDate) %><% } %>">
		<span class="help-block">###format###: DD.MM.YYYY </span>
	</div>
</div>

<hr class="simple-divider">

<div class="form-group">
	<label for="company" class="col-sm-3 control-label">###company###:</label>
	<div class="col-md-6">
		<input type="text" id="company" name="company" placeholder="" class="form-control" value="<% if (job) { %><%= job.company %><% } %>">
	</div>
</div>
<div class="form-group">
	<label for="address" class="col-sm-3 control-label">###address###:</label>
	<div class="col-md-6">
		<input type="text" id="address" name="address" placeholder="" class="form-control" value="<% if (job) { %><%= job.address %><% } %>">
	</div>
</div>

<hr class="simple-divider">

<div class="form-group">
	<% if (0==1) { %>
		<label for="startDate" class="col-sm-3 control-label">###datefrom###:</label>
		<div class="col-sm-3">
			<input type="text" id="startDate" name="startDate" placeholder="DD.MM.YYYY" class="form-control" value="<% if (job) { %><%= DateToInput(job.startDate) %><% } %>">
		</div>
		
		
		<label for="endDate" class="col-sm-1 control-label">###dateto###:</label>
		<div class="col-sm-3">
			<input type="text" id="endDate" name="endDate" placeholder="DD.MM.YYYY" class="form-control" value="<% if (job) { %><%= DateToInput(job.endDate) %><% } %>">
		</div>
	<% } %>
</div>
<div class="form-group">
	<label for="beginning" class="col-sm-3 control-label">###beginning###:</label>
	<div class="col-md-6">
		<input type="text" id="beginning" name="beginning" placeholder="" class="form-control" value="<% if (job) { %><%= job.beginning %><% } %>">
	</div>
</div>
<div class="form-group">
	<label for="duration" class="col-sm-3 control-label">###duration###:</label>
	<div class="col-md-6">
		<input type="text" id="duration" name="duration" placeholder="" class="form-control" value="<% if (job) { %><%= job.duration %><% } %>">
	</div>
</div>

<hr class="simple-divider">

<div class="form-group">
	<label for="skills" class="col-sm-3 control-label">###skills###:</label>
	<div class="col-md-6">
		<input type="text" id="skills" name="skills" class="form-control" value="<% if (job) { %><%= job.skills %><% } %>">
	</div>
</div>
<div class="form-group">
	<div class="formathelp hidden">
		<label for="description" class="col-sm-3 control-label">###formathelp###:</label>
		<div class="col-md-6 text-spacing">
			<div class="col-xs-12 mark">
				<%- catparsehelp %>
			</div>
		</div>
	</div>
	<label for="description" class="col-sm-3 control-label">###description###:<br><a onclick="$('.formathelp').toggleClass('hidden');">###formathelp###</a></label>
	<div class="col-md-6">
		<textarea rows="15" id="description" name="description" placeholder="###descriptiontext###" class="form-control"><% if (job) { %><%= job.description %><% } %></textarea>
	</div>

</div>