<!-- form-category -->

<div class="form-group">
	<label class="col-sm-2 control-label">###contact###: </label>
	<div class="col-sm-8">
		<input type="text" class="form-control" name="contact" placeholder="###empty###" value="<% if (user) { %><%= user.email %><% } %>" >
	</div>
	<span class="help-block">###optional###</span>
</div>

<div class="form-group">
	<label class="col-sm-2 control-label">###feedbackpage###: </label>
	<div class="col-sm-8">
		<input type="text" class="form-control" name="page" placeholder="###empty###" value="<%= targetpage %>" >
	</div>
	<span class="help-block">###optional###</span>
</div>

<div class="form-group">
	<div class="col-sm-12">
		<textarea rows="15" id="feedback" name="feedback" placeholder="###feedbacktext###" class="form-control" autofocus></textarea>
	</div>
</div>