<% layout('layout') -%>
<div class="container">

		<div class="page-header">
		  <h1><%= trans("Sign up") %></h1>
	  </div>

	 
	<form class="form-horizontal" role="form" method="post" action="?r=<%= returnpage %>">

		<% include ../forms/user %>
		
		 <% if ( localhostadmin && (remoteip=="localhost" || remoteip=="127.0.0.1" || remoteip=="::ffff:127.0.0.1") ) { %>
			<div class="form-group">
				<label for="admin" class="col-sm-3 control-label"><%= trans("Create admin account") %></label>
				<div class="col-sm-9">
					<input name="admin" type="checkbox"> (ip: <%= remoteip %>)
				</div>
			</div> <!-- /.form-group -->
		<% } %>
		<div class="form-group">
			<div class="col-sm-9 col-sm-offset-3">
				<div class="checkbox">
					<label>
						<input type="checkbox"><%= trans("I accept") %> <a href="/terms"><%= trans("Terms") %></a>
					</label>
				</div>
			</div>
		</div> <!-- /.form-group -->
		
		<hr class="simple-divider">
				
		<div class="form-group">
			<div class="col-sm-4 col-sm-offset-4">
				<button type="submit" class="btn btn-primary btn-block"><%= trans("Register") %></button>
			</div>
		</div>
	</form> <!-- /form -->
</div>