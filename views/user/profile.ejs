<div id="content">
	<div class="container">
		<% var profile = user; %>
		

		
		<div class="container shadow">
			<% include ../details/user %>
			
			<div class="row">
				<div class="col-sm-12 text-spacing">
					<label class="col-sm-3">
						<strong>###uploadcv###:</strong>
					</label>
