<% layout('layout') -%>
<div class="container">

    <h1 class="title">###forgotpass###</h1>

	<form class="form-horizontal" method="post">
		<div class="form-group">
			<label for="email" class="col-sm-2 control-label">###email###</label>
			<div class="col-sm-8">
				<input type="email" id="email" name="email" placeholder="###email###" class="form-control textarea" autofocus>
			</div>
		</div>

		<div class="form-group">
			<label for="captcha" class="col-sm-2 control-label">###captcha###</label>
			<div class="col-sm-8">
				<div class="g-recaptcha" data-sitekey="<%= captchasite %>"></div>
			</div>
		</div>
		<hr class="simple-divider">
		
		<div class="form-group">
			<div class="col-sm-8 col-sm-offset-2">
				<button type="submit" class="btn btn-primary btn-block">###submit###</button>
			</div>
		</div>
	</form> <!-- /form -->
</div>