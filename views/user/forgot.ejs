<% layout('layout') -%>
<div class="container">

    <h1 class="title">###forgotpass###</h1>

	<script src='https://www.google.com/recaptcha/api.js'></script>
	<form class="form-horizontal" method="post" action="?r=<%= returnpage %>">
		<div class="form-group">
			<label for="email" class="col-sm-3 control-label">###email###</label>
			<div class="col-sm-6">
				<input type="email" id="email" name="email" placeholder="###email###" class="form-control textarea" autofocus>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-12">
				<div class="g-recaptcha" data-sitekey="<%= captchasite %>"></div>
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-xs-4 col-sm-offset-4">
				<button type="submit" class="btn btn-primary btn-block">###submit###</button>
			</div>
		</div>
	</form> <!-- /form -->
</div>