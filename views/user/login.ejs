<% layout('layout') -%>
<div class="container">

    <div class="page-header">
      <h1>###login###</h1>
  </div>

	
	<form class="form-horizontal" method="post" action="?r=<%= returnpage %>">
		<div class="form-group">
			<label for="email" class="col-sm-3 control-label">###email###</label>
			<div class="col-sm-6">
				<input type="email" id="email" name="email" placeholder="###email###" class="form-control textarea" autofocus>
			</div>
		</div>
		<div class="form-group">
			<label for="password" class="col-sm-3 control-label">###password###</label>
			<div class="col-sm-6">
				<input type="password" id="password" name="password" placeholder="###password###" class="form-control textarea">
			</div>
		</div>
		

		<div class="form-group">
			<div class="col-sm-3 col-sm-offset-3">
				<button type="submit" class="btn btn-primary btn-block">###login###</button>
			</div>
			<div class="col-sm-3">
				<a role="button" href="/user/forgot" class="btn btn-primary btn-block">###forgotpass###</a>
			</div>
		</div>
	</form> <!-- /form -->
</div>