<% layout('layout') -%>
<div class="container">
  
    <h1 class="title">###login###</h1>
	
	<form class="form-horizontal" method="post">
		<input type="hidden" name="redirectpage" value="<%= redirectpage %>">
		<div class="form-group">
			<label for="email" class="col-sm-3 control-label">###email###</label>
			<div class="col-sm-6">
				<input type="text" id="email" name="email" placeholder="###email###" value="<%= username || "" %>" class="form-control textarea" onFocus="this.select()" autofocus>
			</div>
		</div>
		<div class="form-group">
			<label for="password" class="col-sm-3 control-label">###password###</label>
			<div class="col-sm-6">
				<input type="password" id="password" name="password" placeholder="###password###" class="form-control textarea" onFocus="this.select()">
			</div>
		</div>
		

		<div class="form-group">
			<div class="col-sm-3 col-sm-offset-3">
				<button type="submit" class="btn btn-primary btn-block">###login###</button>
			</div>
			<div class="col-sm-3">
				<a role="button" href="/user/forgot" class="btn btn-primary btn-block">###forgotpass###</a>
			</div>
		</div>
	</form> <!-- /form -->
</div>