<% layout('layout') -%>
<div id="content">
	<div class="container">

			<div class="page-header">
			  <h1><%= trans("Edit your profile") %></h1>
		  </div>

		<form class="form-horizontal" role="form" method="post" action="?r=<%= returnpage %>">
			<% if ( localhostadmin && (remoteip=="localhost" || remoteip=="127.0.0.1" || remoteip=="::ffff:127.0.0.1") || user.admin) { %>
				<div class="form-group">
					<label for="admin" class="col-sm-3 control-label"><%= trans("Admin") %>: </label>
					<div class="col-sm-9">
						<input type="checkbox" name="admin" <% if (user.admin) { %>checked<% } %>> (ip: <%= remoteip %>)
					</div>
				</div> 
			<% } %>
			
			<% include ../forms/user %>
			
			<hr class="simple-divider">
			
			<div class="form-group">
				<div class="col-sm-4 col-sm-offset-4">
					<button type="submit" class="btn btn-primary btn-block btn-lg"><%= trans("Save changes") %></button>
				</div>
			</div>
		</form> <!-- /form -->
	</div>
</div>