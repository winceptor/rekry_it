<% if (typeof query == "undefined") { query = ""; } %>
<!-- searchbar -->
<div id="searchbar" class="container">
	<form class="col-sm-12 form-horizontal" method="get">
		<div class="form-group">
			<div class="row">
				<div class="col-xs-2">
					<select id="number" name="n" class="selectpicker form-control" title="###results### ###perpage###">
						<% for(var k in resultlimits){ %>
							<option <% if (number && number==resultlimits[k]) { %>selected="selected"<% } %> value="<%= resultlimits[k] %>"><%=resultlimits[k] %> ###perpage###<% if (default_searchlimit==resultlimits[k]) { %> ###default###<% } %></option>
						<% } %>
					</select>
					
					<input type="hidden" name="p" value="1" class="form-control">
				</div>
				<div class="col-xs-10">
					<div class="input-group">
						<input id="searchinput" type="text" class="form-control" name="q" value="<%= query || '' %>" placeholder="###searchtext###" onFocus="this.select()" autofocus>

						<span class="input-group-btn">
							<button id="searchbutton" class="btn btn-primary" type="submit">###search###</button>
						</span>
					
					</div>
				</div>
			</div>
		</div>
	</form>
</div>