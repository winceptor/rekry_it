<!-- topbar -->
<div id="normal_tools">
	<div id="tools">
		<div class="center">
			<ul class="languages-search">
				<% if (!user) { %>
				  <li><a role="button" onclick="location.href='/user/signup?r=<%= encodeURIComponent(currentpath) %>';"><span class="glyphicon glyphicon-user"></span> ###signup###</a></li>
				  <li><a role="button" onclick="location.href='/user/login?r=<%= encodeURIComponent(currentpath) %>';"><span class="glyphicon glyphicon-log-in"></span> ###login###</a></li>
				<% } else { %>
					<li><a href="/user/profile"<% if (!user.verified) { %> style="color:yellow;"<% } else { %> style="color:lightgreen;"<% } %>><%= user.email %></a></li>
					<li><a href="/user/logout">###logout###</a></li>
				<% } %>
				<li id="menusearch" class="search">
					<form method="get" action="/search">
						<input type="text" name="q" size="20" placeholder="###search###" title="###search###" id="aui_3_4_0_1_1675" class="search_input">
						<input src="/img/search.png" title="###search###" type="image" alt="###search###"> 
					</form>
				</li>

			</ul>
			<ul class="help-links">
			<% if (typeof languages!="undefined" && languages && typeof language_choices!="undefined" && language_choices) { %>
				<% for (k in language_choices) { var lang = language_choices[k]; %>
					<li><a href="/language/<%=lang %>"><%=languages[lang].languagetranslate %></a></li>
				<% } %>
			<% } %>
			</ul>
		</div>
	</div>
</div>