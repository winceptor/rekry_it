<!-- paginator -->
<div class="row">
	<div class="col-xs-12">
		<div class="col-xs-4">
			<% if (page>1){ %>
				<a role="button" href="?<%= 'q='+query+'&p='+(+page-1)+'&n='+number %>" class="btn btn-primary btn-sm"><%= trans("Previous page") %></a>
			<% } %>
		</div>
		<div class="col-xs-4 resultnumber">
			<p><%= trans("Showing results") %>: <%= number*(page-1)+1 %>-<%= Math.min(number*page,total) %> <%= trans("of total") %> <%= total %></p>
		</div>
		<div class="col-xs-4">
			<% if (total>number*page){ %>
				<a role="button" href="?<%= 'q='+query+'&p='+(+page+1)+'&n='+number %>" class="btn btn-primary btn-sm pull-right"><%= trans("Next page") %></a>
			<% } %>
		</div>
	</div>
</div>