<% layout ('layout') -%>
<div id="content">
    <div class="container">
			
		<% var profile = data; %>
		<div class="container shadow">
			<% include ../details/user %>
		
		
			<hr class="simple-divider">
			
			
			<div class="col-sm-12 vertical-spacing">
				<% if (user) { %>
					<% if (user.admin) { %>
						<div class="pull-right">
							<button onclick="window.open('/admin/edit-user/<%= profile._id %>');" class="btn btn-admin btn-simple">###edit###</button>
							<button onclick="window.open('/admin/delete-user/<%= profile._id %>');" class="btn btn-admin btn-simple">###delete###</button>
						</div>
					<% } %>
				<% } %>
				<hr class="empty-divider">
			</div>
		
		
		</div> 	
	</div>
</div>