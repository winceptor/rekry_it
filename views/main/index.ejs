<% layout('layout') -%>
	<% include ../partials/slider %>
	<div id="content">
		<div class="container">
			<div class="row">
				<h1 class="title"><%= trans("Welcome") %></h1>
				<div class="col-lg-12">
					<h1><%= trans("This is where you find your employer or employee") %></h1>
				</div>
				<div class="col-lg-12">
					<% if (!user) { %>
						<div class="visible-xs-inline-block visible-sm-inline-block visible-md-inline-block visible-lg-inline-block">
							<a class="btn btn-primary btn-lg" href="/user/signup" role="button"><%= trans("Signup") %></a>
						</div>
						<div class="visible-xs-inline-block visible-sm-inline-block visible-md-inline-block visible-lg-inline-block">
							<a href="/user/login" class="btn btn-default btn-lg" role="button"><%= trans("Log In") %></a>
						</div>
					<% } else { %>

					  <div class="visible-xs-inline-block visible-sm-inline-block visible-md-inline-block visible-lg-inline-block">
						<a href="/user/profile" class="btn btn-default btn-lg" role="button"><%= trans("Welcome back") %> <span class="btn-link"><%= user.name %></span></a>
					  </div>
					<% } %>
				</div>
			</div>
			
			<hr class="simple-divider">
			
			<div class="row">
				<div class="col-md-6">

					<h1 class="text-left title"><%= trans("Search by field") %></h1>
					
					<% for(var k in jobfields){ %>
						<div class="visible-xs-inline-block visible-sm-inline-block visible-md-inline-block visible-lg-inline-block">
							<a href="/search?f=<%= k %>" class="btn btn-link">
								<h3 class="text-left"><span class="glyphicon glyphicon-chevron-right"></span><%= jobfields[k] %></h3>
							</a>
						</div>
					<% } %>
					
				</div>	<!-- /.col-md-9 -->
				
				<div class="col-md-6">
					<h1 class="text-left title"><%= trans("Search by type") %></h1>
					
					<% for(var i=0; i<jobtypes.length;i++){ %>
						<div class="visible-xs-inline-block visible-sm-inline-block visible-md-inline-block visible-lg-inline-block">
							<a href="/search?t=<%=jobtypes[i] %>" class="btn btn-link">
								<h3 class="text-left"><span class="glyphicon glyphicon-chevron-right"></span><%= jobtypes[i] %></h3>
							</a>
						</div>
					<% } %>
				</div><!-- /.col-md-3 -->
			</div>
		</div>
		<!-- Marketing messaging and featurettes
		================================================== -->
		
		<% if (featuredjobs.length && featuredjobs.length>0) { %>
			<hr class="container-divider">
			
			<div class="container marketing">
				
				<!-- START THE FEATURETTES -->
				
					
					<h1 class="text-left title"><%= trans("Featured Positions") %></h1>
					<!--use square images here!!!!-->
					<% for(var i=0; i<featuredjobs.length;i++){ var entry = featuredjobs[i];  if (typeof entry != 'undefined') { %>
						<% if (i>0) { %><hr class="featurette-divider"><% } %>
						<div class="row featurette">
						  <div class="col-md-8">
							<h2><%= entry.title %><span class="text-muted"><%= trans(" - ") %></span><%= entry.type %></h2>
							<p class="lead"><%= entry.description %></p>

							<a role="button" href="/job/<%= entry._id %>" class="btn btn-primary btn-sm"><%= trans("Details") %></a>
						  </div>
						  <div class="col-md-4">
							<% if (entry.logo) { %>
							<a href="#">
							  <img class="featurette-image img-responsive center-block" src="<%= entry.logo %>" alt="company logo">

							</a>
							<% } %>
						  </div>
						</div>
					<% } } %>

			</div>
		<% } %>
		
		<hr class="container-divider">
		
		<div class="container marketing">
			
			<!-- START THE FEATURETTES -->
			
				
				<h1 class="text-left title"><%= trans("Newest Positions") %></h1>
				<!--use square images here!!!!-->
				<% for(var i=0; i<newestjobs.length;i++){ var entry = newestjobs[i]; if (typeof entry != 'undefined') { %>
					<% if (i>0) { %><hr class="featurette-divider"><% } %>
					<div class="row featurette">
					  <div class="col-md-8"">
						<h2><%= entry.title %><span class="text-muted"><%= trans(" - ") %></span><%= entry.type %></h2>
						<p class="lead"><%= entry.description %></p>

						<a role="button" href="/job/<%= entry._id %>" class="btn btn-primary btn-sm"><%= trans("Details") %></a>
					  </div>
					  <div class="col-md-4">
						<% if (entry.logo) { %>
						<a href="#">
						  <img class="featurette-image img-responsive center-block" src="<%= entry.logo %>" alt="company logo">

						</a>
						<% } %>
					  </div>
					</div>
				<% } } %>

		</div>
		
		<hr class="container-divider">		
		<!-- Wrap the rest of the page in another container to center all the content. -->
		<div class="container marketing">

		  <!-- Three columns of text below the carousel -->

			<!--Featured company area -->
			<div class="row">
				
			  <h1 class="text-left title"><%= trans("Featured companies") %></h1>
			  <div class="row featurette">
				  <div class="col-md-3">
					<a href="#">
					  <img class="featurette-image img-responsive center-block" src="http://lorempixel.com/200/200" alt="company logo" style="width:200px;height:200px;">
					</a>
				  </div>
				  <div class="col-md-3">
					<a href="#">
					  <img class="featurette-image img-responsive center-block" src="http://lorempixel.com/200/200" alt="company logo" style="width:200px;height:200px;">
					</a>
				  </div>
				  <div class="col-md-3">
					<a href="#">
					  <img class="featurette-image img-responsive center-block" src="http://lorempixel.com/200/200" alt="company logo" style="width:200px;height:200px;">
					</a>
				  </div>
				  <div class="col-md-3">
					<a href="#">
					  <img class="featurette-image img-responsive center-block" src="http://lorempixel.com/200/200" alt="company logo" style="width:200px;height:200px;">
					</a>
				  </div>
				</div>
			</div>
			
		</div>
	</div>