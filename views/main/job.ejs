<% layout ('layout') -%>
<div id="content">
    <div class="container">
		
		<% var job = data; %>
		<div class="container shadow">
			<% include ../details/job-extended %>
		
							
			<hr class="simple-divider">
		
		
			<div class="col-sm-12 vertical-spacing">
				<% if (user) { %>
					<% if (job.user && (user._id==job.user._id || user._id==job.user)) { %>

					<% } else { %>
						<% if (typeof favorite == "undefined") { favorite = false; } %>
						<% if (favorite) { %>
							<button onclick="location.href='/unfavorite/<%= job._id %>'" class="btn btn-primary btn-simple btn-warning">###unfavorite###</button>
						<% } else { %>
							<% if (job.displayDate>=LastDay || 1==1) { %>
								<button onclick="location.href='/favorite/<%= job._id %>'" class="btn btn-primary btn-simple btn-warning">###addfavorite###</button>
							<% } else { %>
								<button disabled class="col-sm-4 col-sm-offset-4 btn btn-primary">###closed###</button>
							<% } %>
						<% } %>
					<% } %>
				<% } else { %>
					<a role="button" href="/user/signup" class="col-sm-4 col-sm-offset-4 btn btn-primary">###signup###</a>
				<% } %>
				<div class="pull-right">
					<% if (user) { %>
						<% include ../partials/job-adminbuttons %>
						<button id="closebutton" role="button" onclick="window.close();" class="btn btn-close">###close###</button>
					<% } %>
				</div>
				
				<hr class="empty-divider">
			</div>
		</div>
	</div>
</div>