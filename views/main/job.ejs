<% layout ('layout') -%>
<div id="content">
    <div class="container">
		
		<% var job = data; %>
		<div class="container shadow">
			<% include ../details/job-extended %>
		
							
			<hr class="simple-divider">
		
		
			<div class="col-sm-12 text-spacing">
				<% if (user) { %>
					<% if (job.user && (user._id==job.user._id || user._id==job.user)) { %>

					<% } else { %>
						<% if (typeof application == "undefined") { application = false; } %>
						<% if (application) { %>
							<a role="button" href="/unfavorite/<%= job._id %>" class="col-sm-4 col-sm-offset-4 btn btn-warning">###unfavorite###</a>
						<% } else { %>
							<% if (job.displayDate>=LastDay) { %>
								<a role="button" href="/favorite/<%= job._id %>" class="col-sm-4 col-sm-offset-4 btn btn-primary">###addfavorite###</a>
							<% } else { %>
								<button disabled class="col-sm-4 col-sm-offset-2 btn btn-primary">###closed###</button>
							<% } %>
						<% } %>
					<% } %>
				<% } else { %>
					<a role="button" href="/user/signup" class="col-sm-4 col-sm-offset-2 btn btn-primary">###signup###</a>
				<% } %>
				<div class="pull-right">
					<% if (user) { %>
						<% if (user.admin) { %>
							<button role="button" onclick="window.open('/admin/edit-job/<%= job._id %>');" class="btn btn-admin">###edit###</button>
							<button role="button" onclick="window.open('/admin/delete-job/<%= job._id %>');" class="btn btn-admin">###delete###</button>
						<% } %>
						<button role="button" onclick="window.close();" class="btn">###close###</button>
					<% } %>
				</div>
				
				<hr class="empty-divider">
			</div>
		</div>
	</div>
</div>