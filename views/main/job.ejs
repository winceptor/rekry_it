<% layout ('layout') -%>
 <div class="content">
    <div class="container">
			
		<% include ../details/job %>
						
		<hr class="simple-divider">
		
		<div class="row">
			<div class="col-sm-12">
				<a role="button" href="/apply/<%= job._id %>?r=<%= returnpage %>" class="col-sm-4 col-sm-offset-4 btn btn-primary btn-lg"><%= trans("Apply") %></a>
				<% if (user) { %>
					<% if (user.admin) { %>
						<div class="pull-right">
							<a role="button" href="/admin/edit-job/<%= job._id %>?r=<%= returnpage %>" class="btn btn-primary btn-lg btn-warning"><%= trans("Edit") %></a>
							<a role="button" href="/admin/delete-job/<%= job._id %>?r=<%= returnpage %>" class="btn btn-primary btn-lg btn-warning"><%= trans("Delete") %></a>
						</div>
					<% } %>
				<% } %>
				
			</div>
		</div> 	
	</div>
</div>