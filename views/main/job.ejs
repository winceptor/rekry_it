<% layout ('layout') -%>
 <div class="content">
    <div class="container">
		
		<% var entry = data; %>
		<div class="container shadow">
			<% include ../details/job-extended %>
		</div>
						
		<hr class="empty-divider">
		
		<div class="row">
			<div class="col-sm-12">
				<% if (user) { %>
					
						<% if (entry.displayDate>=Today) { %>
							<a role="button" href="/apply/<%= entry._id %>" class="col-xs-4 col-sm-offset-4 btn btn-primary btn-lg">###apply###</a>
						<% } else { %>
							<button disabled class="col-xs-4 col-sm-offset-4 btn btn-primary btn-lg">###closed###</button>
						<% } %>
					
					<% if (user.admin) { %>
						<div class="pull-right">
							<a role="button" href="/admin/edit-job/<%= entry._id %>" class="btn btn-primary btn-lg btn-warning">###edit###</a>
							<a role="button" href="/admin/delete-job/<%= entry._id %>" class="btn btn-primary btn-lg btn-warning">###delete###</a>
						</div>
					<% } %>
				<% } else { %>
					<a role="button" href="/user/signup" class="col-xs-4 col-sm-offset-4 btn btn-primary btn-lg">###signup###</a>
				<% } %>
			</div>
		</div> 	
	</div>
</div>