<% layout('layout') -%>
<div id="content">
	<div class="container shadow">
		
		<% var entry = data; %>
		<% include ../details/category %>

		
		<% if (user) { %>
			<% if (user.admin) { %>
				<hr class="simple-divider">
				
				<div class="col-sm-12">
					<div class="pull-right">
						<a role="button" href="/admin/edit-category/<%= data._id %>" class="btn btn-primary btn-lg btn-warning">###edit###</a>
						<a role="button" href="/admin/delete-category/<%= data._id %>" class="btn btn-primary btn-lg btn-warning">###delete###</a>
					</div>
				</div>
			<% } %>
		<% } %>

									
		
	</div>
	
	<div class="container">
		<% include ../partials/searchbar %>


		  <div class="row">
		   <div class="col-sm-12" id="searchresults">
			  <% for (var i=0; i<jobs.length; i++) { var job = jobs[i]; if (typeof job != 'undefined') { %>
					<div class="container result shadow">
						<% include ../details/job %>
						<div class="col-sm-12 text-right"><a role="button" href="/job/<%= job._id %>" class="btn btn-primary btn-sm" target="_blank">###details###</a></div>
					</div>
				<% } } %>
			</div>
		  </div>
		  
		  <% include ../partials/paginator %>
	</div>
</div>