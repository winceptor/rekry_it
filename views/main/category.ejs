<% layout('layout') -%>

<link rel="stylesheet" href="../public/css/jumbotron.css" media="screen" title="no title" charset="utf-8">


<div class="container">

  <div class="row">

    <% for (var i = 0; i < jobs.length; i++) { %>
    <div class="col-md-4">
      <a href="/jobs/<%= jobs[i]._id %>">
        <div class="thumbnail">

          <div class="caption">
            <h3><%= jobs[i].title %></h3>
            <p><%= jobs[i].field.field%></h3>
            <p><%= jobs[i].phrase %></p>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</div>
