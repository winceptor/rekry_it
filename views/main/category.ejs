<% layout('layout') -%>

<div class="container">

	<% var entry = data; %>
	<% include ../details/category %>

	<div class="row">
		<div class="col-sm-12">
			<% if (user) { %>
				<% if (user.admin) { %>
					<div class="pull-right">
						<a role="button" href="/admin/edit-category/<%= data._id %>?r=<%= returnpage %>" class="btn btn-primary btn-lg btn-warning">###edit###</a>
						<a role="button" href="/admin/delete-category/<%= data._id %>?r=<%= returnpage %>" class="btn btn-primary btn-lg btn-warning">###delete###</a>
					</div>
				<% } %>
			<% } %>
			
		</div>
	</div> 	
							
	<hr class="simple-divider">
	  <div class="row">
	   <div class="col-sm-12" id="searchresults">
		  <% for (var i=0; i<jobs.length; i++) { var entry = jobs[i]; if (typeof entry != 'undefined') { %>
				<div class="container result shadow">
					<% include ../details/job %>
					<div class="col-sm-12 text-right"><a role="button" href="/job/<%= entry._id %>" class="btn btn-primary btn-sm">###details###</a></div>
				</div>
			<% } } %>
		</div>
	  </div>
	  
	  <% include ../partials/paginator %>
</div>
