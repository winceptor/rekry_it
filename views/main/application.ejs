<% layout ('layout') -%>
 <div class="content">
    <div class="container">
		
		<% var entry = data.job; %>
		<div class="container shadow">
			<% include ../details/job-full %>
		</div>
						
		<hr class="empty-divider">
		
		<% var entry = data.user; %>
		<div class="container shadow">
			<% include ../details/user %>
		</div>
		
		<div class="container shadow">
			<hr class="empty-divider">
			<div class="row">
			   <div class="col-sm-12">
					<label class="col-sm-12">
						<strong>###application###:</strong>
					</label>
			   </div>
			</div>
			
			<hr class="simple-divider">
			
			<div class="col-sm-12 text-spacing">
				<div class="container lead text-justify"><%= highlight(data.application) %></div>
			</div>
		</div>
		
		<div class="row">
			<div class="col-sm-12">
				<% if (user) { %>
					<% if (user.admin) { %>
						<div class="pull-right">
							<a role="button" href="/admin/edit-application/<%= data._id %>" class="btn btn-primary btn-lg btn-warning">###edit###</a>
							<a role="button" href="/admin/delete-application/<%= data._id %>" class="btn btn-primary btn-lg btn-warning">###delete###</a>
						</div>
					<% } %>
				<% } %>
			</div>
		</div> 	
	</div>
</div>